<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:background="#FFF8E1">

        <!-- TextView for the title "Mango" -->

        <!-- TextView for the description of Mango -->

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Mango"
            android:textColor="#FF9800"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="265dp"
            android:layout_height="166dp"
            app:srcCompat="@drawable/mango" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="8dp"
            android:text="Mango is a tropical stone fruit, known for its sweet and juicy flesh. Originating in South Asia, it is widely grown in tropical and subtropical regions. Mangoes are rich in vitamins, particularly vitamin C and A, and are enjoyed in various forms such as raw fruit, smoothies, juices, and desserts."
            android:textColor="#333333"
            android:textSize="16sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>